<%- include ('../layouts/header') %>


    <div class="main-navbar shadow-sm sticky-top">
        <div class="top-navbar">
            <div class="container-fluid">
                <div class="row">
                    <div class="d-flex justify-content-between">
                        <a class="navbar-brand" href="/home">
                            <img src="/images/logo.png" style="max-height: 70px;" alt="logo">
                        </a>
                        <a href="/signup" class=" text-decoration-none text-white pt-3 pe-5">SignUp</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <section>
        <div class="container-fluid mt-5">
            <div class="icon text-center">
                <h1>Log In</h1>
            </div>
            <div class="row justify-content-center align-items-center ">
                <div class="col-md-3 loginBorder position-relative  pe-3">
                    <div class="orText d-none d-md-block">or</div>
                    <form id="loginForm" action="/login" method="post">

                        <% if (message) { %>
                            <div>
                                <span class="text-danger">
                                    <%= message.userLoginError %>
                                </span>
                            </div>
                            <% } %>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email" name="email" class="form-control" id="email"
                                        placeholder="Enter your email">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" name="password" class="form-control" id="loginPassword"
                                        placeholder="Enter your password">
                                </div>
                                <div class="mb-3">
                                    <a href="/forgotpassword" class="text-decoration-none text-dark">Forgot
                                        password?</a>
                                </div>
                                <button type="submit" id="userLogged" class="btn btn-dark"
                                    style="width: -webkit-fill-available;">Login</button>
                    </form>
                </div>

                <!-- Right Div: Continue with Google -->
                <div class="col-md-3   ps-5 position-relative">
                    <div class="d-flex align-items-center justify-content-start">
                        <img src="/images/google@2x.png" alt="" class="ms-2 position-absolute" style="height: 70%;" />
                        <button type="button" class="btn btn-white ml-3 text-center border"
                            style="width: -webkit-fill-available;">
                            Sign in using Google
                        </button>
                    </div>
                </div>

            </div>
            <div class="text-center mt-3">
                <a href="/signup" class="text-decoration-none text-dark">Create Account</a>
            </div>

        </div>

    </section>

    <%- include ('../layouts/footer') %>