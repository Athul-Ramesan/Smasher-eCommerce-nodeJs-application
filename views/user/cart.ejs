<script>
  $(document).ready(function () {
    // Assuming 'products' is an array of products retrieved from your server.
    const products = <%= JSON.stringify(products) %>;

    // Function to update the total for a product
    function updateProductTotal(productId) {
      const quantity = parseInt($(`#quantity-${productId}`).val());
      const pricePerItem = parseFloat($(`#price-${productId}`).data("price"));

      const total = quantity * pricePerItem;
      $(`#product-total-${productId}`).text(`$${total.toFixed(2)}`);

      // Calculate the cart's total price
      let cartTotal = 0;
      products.forEach((product) => {
        const productQuantity = parseInt($(`#quantity-${product.id}`).val());
        const productPrice = parseFloat($(`#price-${product.id}`).data("price"));
        cartTotal += productQuantity * productPrice;
      });

      // Update the cart's total price
      $('#grand-total').text(`Total price: $${cartTotal.toFixed(2)}`);
    }

    // Event listener for quantity input changes
    products.forEach((product) => {
      $(`#quantity-${product.id}`).on("input", function () {
        updateProductTotal(product.id);
      });
    });
  });
</script>

