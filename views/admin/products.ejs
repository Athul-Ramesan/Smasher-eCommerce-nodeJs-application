<%-include ('../layouts/adminHeader') %>
    <%-include ('../partials/adminSidebar') %>


        <div class="container ml-auto col-md-10">
            <a href="addproduct/" class="btn btn-dark rounded-pill my-4  m-3 px-5 py-2">Add Product</a>
        </div>
        <div class="col-12">
            <div class="  h-100 p-4">

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">SL No</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Product Id</th>
                                <th scope="col">Status</th>
                                <th scope="col">Price</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Updated Date</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% products.forEach((product,index)=>{ %>

                                <tr>
                                    <th class="count">
                                        <%= index+1 %>
                                    </th>
                                    <td>
                                        <%=product.name %>
                                    </td>
                                    <td>
                                        <%=product._id %>
                                    </td>
                                    <% if(product.active) { %>
                                        <td class="text-success"> Active </td>
                                        <% }else { %>
                                            <td class="text-danger"> Disabled </td>
                                            <% } %>

                                                <td>
                                                    <%=product.price %>
                                                </td>
                                                <td>
                                                    <%=product.stock %>
                                                </td>
                                                <td>
                                                    <%=product.createdAt %>
                                                </td>
                                                <td>
                                                    <div class="d-flex">
                                                        <a class="btn btn-outline-dark m-1"
                                                            href="/admin/editProduct/<%=product._id%>">Edit</a>
                                                        <%if (product.active){ %>
                                                            <a class="btn btn-outline-warning m-1 text-dark"
                                                                href="/admin/hideProduct/<%=product._id%>"
                                                                onclick="return confirm('Do you want to delete--> ?')">Hide</a>
                                                            <% }else { %>
                                                                <a class="btn btn-outline-success m-1 text-dark"
                                                                    href="/admin/hideProduct/<%=product._id%>"
                                                                    onclick="return confirm('Do you want to delete--> ?')">Active</a>
                                                                <% } %>

                                                    </div>

                                                </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
        </div>

        <%-include ('../layouts/footer') %>